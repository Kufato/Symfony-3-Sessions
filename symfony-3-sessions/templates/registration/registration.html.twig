{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block content %}
    <div style="display:flex; flex-direction:column; justify-content:center; align-items:center; min-height:60vh; gap:1.5rem; text-align:center; max-width:400px; margin:0 auto;">

        <h2 style="font-size:2rem; color:#333;">Create an Account</h2>

        {{ form_start(registrationForm, {'attr': {'style': 'display:flex; flex-direction:column; gap:1rem; width:100;'}}) }}
            
            <div style="display:flex; flex-direction:column; gap:0.25rem;">
                {{ form_label(registrationForm.username) }}
                {{ form_widget(registrationForm.username, {'attr': {'style': 'padding:0.5rem; border-radius:0.5rem; border:1px solid #ccc; font-size:1rem;'}}) }}
                {{ form_errors(registrationForm.username) }}
            </div>

            <div style="display:flex; flex-direction:column; gap:0.25rem;">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email, {'attr': {'style': 'padding:0.5rem; border-radius:0.5rem; border:1px solid #ccc; font-size:1rem;'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div style="display:flex; flex-direction:column; gap:0.25rem;">
                {{ form_label(registrationForm.password) }}
                <small style="color:#666; font-size:0.85rem;">
                    At least 8 characters, one uppercase letter, one special character
                </small>
                {{ form_widget(registrationForm.password, {'attr': {'style': 'padding:0.5rem; border-radius:0.5rem; border:1px solid #ccc; font-size:1rem;'}}) }}
                {{ form_errors(registrationForm.password) }}
            </div>

            <button type="submit" style="
                background:#28a745;
                color:#fff;
                border:none;
                padding:0.75rem 2rem;
                font-size:1rem;
                border-radius:0.5rem;
                cursor:pointer;
                transition:0.2s;
            " onmouseover="this.style.background='#1e7e34'" onmouseout="this.style.background='#28a745'">
                Register
            </button>
        {{ form_end(registrationForm) }}

        <a href="{{ path('app_home') }}" style="
            display:inline-block;
            margin-top:1rem;
            background:#007bff;
            color:#fff;
            padding:0.5rem 1.5rem;
            border-radius:0.5rem;
            text-decoration:none;
            transition:0.2s;
        " onmouseover="this.style.background='#0056b3'" onmouseout="this.style.background='#007bff'">
            Home
        </a>

    </div>
{% endblock %}
